---
// Gerekli bileşenleri ve verileri import et
import MainLayout from "@/layouts/MainLayout.astro";
// Fransızca için ayrı bir ContactSection bileşeni olduğunu varsayıyoruz
import ContactSection_fr from "@components/sections/fr/ContactSection_fr.astro";
import { SITE } from "@data/constants"; // SITE sabiti kullanılacak
import amirAvatar from "@images/Amir+Montazer.avif"; // Amir'in avatarı import edildi (her iki dil için aynı varsayılıyor)

// Sayfa başlığını Kraffe Roasters'a göre ayarla (Fransızca)
const pageTitle_fr: string = `Nous Contacter | ${SITE.title}`;

// Canonical URL için hedef domaini ve dil yolunu kullan
const canonicalUrl_fr = `${SITE.url}/fr/contact`; // SITE.url kullanılmalı
---

<MainLayout
  title={pageTitle_fr}
  lang="fr" {/* Dil etiketi eklendi */}
  structuredData={{
    "@context": "https://schema.org",
    "@type": "ContactPage", // Tip ContactPage olarak güncellendi
    "@id": canonicalUrl_fr,
    "url": canonicalUrl_fr,
    "name": `Contacter Kraffe Roasters | Machines à Torréfier Commerciales et Industrielles`, // Sayfa adı çevrildi
    "description": "Contactez Kraffe Roasters pour toute question concernant nos machines à torréfier commerciales et industrielles, nos équipements ou nos services. Demandez un devis ou une consultation.", // Meta description çevrildi
    "isPartOf": {
        "@type": "WebSite",
        "url": `${SITE.url}/fr`, // Ana site FR URL'si
        "name": SITE.title, // constants.ts'den alınacak
        "description": SITE.description // constants.ts'den alınacak (İngilizce kalabilir veya çevrilebilir)
    },
    "inLanguage": "fr-FR" // Dil kodu güncellendi
  }}
>
  {/* ContactSection_fr bileşenine amirAvatar verisi prop olarak geçirildi */}
  <ContactSection_fr amirAvatarData={amirAvatar} />
</MainLayout>
