---
// Importing necessary components
import MainLayout from "@/layouts/MainLayout.astro";
import PrimaryCTA from "@components/ui/buttons/PrimaryCTA.astro";
import CardSmall from "@components/ui/cards/CardSmall.astro";
// import CardWide from "@components/ui/cards/CardWide.astro"; // Artık kullanılmıyor, silebilirsin veya yorumda bırakabilirsin
import FeaturesStatsAlt from "@components/sections/features/FeaturesStatsAlt.astro";
import TestimonialsSectionAlt from "@components/sections/testimonials/TestimonialsSectionAlt.astro";

// Importing necessary functions from Astro
import { getCollection } from "astro:content";
import type { CollectionEntry } from "astro:content";
import { SITE } from "@data/constants";

// Fetching all the product related content and sorting it by main.id
const product: CollectionEntry<"products">[] = (
  await getCollection("products", ({ id }) => {
    return id.startsWith("en/");
  })
).sort(
  (a: CollectionEntry<"products">, b: CollectionEntry<"products">) =>
    a.data.main.id - b.data.main.id,
);

// Define variables for page content
const title: string = "Products";
const subTitle: string =
  "All Kraffe Roasters machines are 100% tested on every production step, from design phase till shipment. Regardless of temperature limits and batch scales, Kraffe Roasters may provide a full control on your process and will give the opportunity to reveal your talent on roasting.";

// Testimonial data that will be rendered in the component
const testimonials = [
  // First testimonial data
  {
    content:
      " \"I'm a coffee enthusiast who enjoys experimenting with different coffee profiles. The coffee roasting machine from Kraffe has become an indispensable tool in my coffee journey.\" ",
    author: "Henry",
    role: "Kraffe Customer",
    avatarSrc:
      "https://images.unsplash.com/photo-1525610553991-2bede1a236e2?q=80&w=2070&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D",
    avatarAlt: "Image Description",
  },
  // Second testimonial data
  {
    content:
      " \"I couldn't be happier with my decision to invest in the coffee roasting machine by Kraffe. As a small-scale coffee roaster, I needed a reliable and efficient machine that could handle my production needs. This machine delivers on all fronts.\" ",
    author: "Sophie",
    role: "Kraffe Customer",
    avatarSrc:
      "https://images.unsplash.com/photo-1464979681340-bdd28a61699e?q=80&w=2070&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D",
    avatarAlt: "Image Description",
  },
  // Third testimonial data
  {
    content:
      " \"I've been using the coffee roasting machine from Kraffe for several months now, and I must say it has exceeded my expectations. Modular flame level is helping me out to yield best results.\" ",
    author: "Madison",
    role: "Kraffe Customer",
    avatarSrc:
      "https://images.unsplash.com/photo-1507914464562-6ff4ac29692f?q=80&w=1887&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D",
    avatarAlt: "Image Description",
  },
];

const pageTitle: string = `Products | ${SITE.title}`;
---

<MainLayout
  title={pageTitle}
  structuredData={{
    "@context": "https://schema.org",
    "@type": "WebPage",
    "@id": "https://krafferoasters.com/products",
    "url": "https://krafferoasters.com/products",
    "name": "Kraffe Roasters",
          "description": "Master the Art of Roasting: Kraffe Commercial Coffee Roasting Machines. Achieve precision, durability, and consistency with KRAFFE industrial coffee roasters—designed for professionals and backed by lifetime support.",
    "isPartOf": {
      "@type": "WebSite",
      "url": "https://krafferoasters.com",
      "name": "Kraffe Roasters",
      "description": "Master the Art of Roasting: Kraffe Commercial Coffee Roasting Machines. Achieve precision, durability, and consistency with KRAFFE industrial coffee roasters—designed for professionals and backed by lifetime support."
    },
    "inLanguage": "en-US"
  }}
>
  <div
    class="mx-auto max-w-[85rem] px-4 py-10 sm:px-6 lg:px-8 lg:py-14 2xl:max-w-full"
  >
    <div class="mb-4 flex items-center justify-between gap-8 sm:mb-8 md:mb-12">
      <div class="flex items-center gap-12">
        <h1
          class="text-balance text-2xl font-bold tracking-tight text-neutral-800 dark:text-neutral-200 md:text-4xl md:leading-tight"
        >
          {title}
        </h1>
        {
          subTitle && (
            <p class="hidden max-w-(--breakpoint-sm) text-pretty text-neutral-600 dark:text-neutral-400 md:block">
              {subTitle}
            </p>
          )
        }
      </div>
      <PrimaryCTA title="Customer Stories" url="#testimonials" noArrow={true} />
    </div>

    {/* === DEĞİŞEN BÖLÜM === */}
    {/* Tüm ürünler için CardSmall kullanılıyor */}
    <section class="grid grid-cols-1 gap-4 sm:grid-cols-3 md:gap-6 xl:gap-8">
      {
        product.map((product) => {
          // if/else kaldırıldı, her zaman CardSmall döndürülüyor
          return <CardSmall product={product} />;
        })
      }
    </section>
    {/* === /DEĞİŞEN BÖLÜM === */}

  </div>
  <!--Features statistics section-->
  <FeaturesStatsAlt
    title="Crafted for Roasting Perfection"
    subTitle="Each KRAFFE roaster is expertly engineered to deliver exceptional control, consistency between batches, and efficiency, allowing you to fully unlock the potential of every bean."
    benefits={[
      "Precision Control",
      "Exceptional Batch-to-Batch Consistency",
      "Durable, Consistent, Easy to Maintain",
      "Integrated & Supported",
    ]}
  />
  <!--Testimonials section-->
  <TestimonialsSectionAlt
    title="What Our Customers Say"
    testimonials={testimonials}
  />
</MainLayout>
