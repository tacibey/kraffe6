---
// Import AvatarTestimonialSection component and Image for main testimonial image
import AvatarTestimonialSection from "../../ui/avatars/AvatarTestimonialSection.astro";
import { Image } from "astro:assets"; // Image bileşenini import et
import type { ImageMetadata } from "astro"; // ImageMetadata tipini import et

// Define props from Astro
const { title, testimonials } = Astro.props;

// Define TypeScript interface for Testimonial
interface Testimonial {
  // content: string; // content kaldırıldı
  mainImageSrc: ImageMetadata | string; // Ana görsel için src (ImageMetadata veya string olabilir)
  mainImageAlt: string;           // Ana görsel için alt metin
  author: string;
  role: string;
  avatarSrc: string; // Avatar hala string URL olabilir
  avatarAlt: string;
}

// Define TypeScript interface for props
interface Props {
  title: string;
  testimonials: Testimonial[];
}
---
<!-- Main div that wraps the testimonials section -->
<section
  class="mx-auto max-w-[85rem] px-4 py-10 sm:px-6 lg:px-8 lg:py-14 2xl:max-w-full"
  id="testimonials" {/* Bu ID, products sayfasındaki butonun scroll yapması için önemli */}
>
  {/* Title of the testimonials section */}
  <div class="mb-6 w-3/4 max-w-2xl sm:mb-10 md:mb-16 lg:w-1/2">
    <h2
      class="text-balance text-2xl font-bold text-neutral-800 dark:text-neutral-200 sm:text-3xl lg:text-4xl"
    >
      {title}
    </h2>
  </div>

  <div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
    {/* Looping through each testimonial data and rendering it */}
    {
      testimonials.map((testimonial) => (
        <div class="flex h-auto"> {/* h-auto daha esnek olabilir */}
          <div class="flex flex-col rounded-xl bg-neutral-50 dark:bg-neutral-700">
            {/* === ESKİ YORUM METNİ YERİNE ANA GÖRSEL === */}
            <div class="flex-auto p-4 md:p-6">
              {testimonial.mainImageSrc && (
                <div class="aspect-[4/3] overflow-hidden rounded-lg mb-4"> {/* En-boy oranı ve alt boşluk */}
                  <Image
                    src={testimonial.mainImageSrc}
                    alt={testimonial.mainImageAlt}
                    class="w-full h-full object-cover object-center transition-transform duration-300 ease-in-out group-hover:scale-105"
                    loading="lazy"
                    format="avif"
                    quality={80}
                  />
                </div>
              )}
            </div>
            {/* === /ESKİ YORUM METNİ YERİNE ANA GÖRSEL === */}

            {/* Yazar ve Avatar Bilgisi (opsiyonel olarak kalabilir) */}
            {(testimonial.author || testimonial.avatarSrc) && (
              <div class="rounded-b-xl bg-neutral-300/30 p-4 dark:bg-neutral-900/30 md:px-7">
                <div class="flex items-center">
                  {testimonial.avatarSrc && (
                    <AvatarTestimonialSection
                      src={testimonial.avatarSrc}
                      alt={testimonial.avatarAlt}
                    />
                  )}
                  {(testimonial.author || testimonial.role) && (
                    <div class={`grow ${testimonial.avatarSrc ? 'ms-3' : ''}`}> {/* Avatar yoksa margin'i kaldır */}
                      {testimonial.author && (
                        <p class="text-sm font-bold text-neutral-800 dark:text-neutral-200 sm:text-base">
                          {testimonial.author}
                        </p>
                      )}
                      {testimonial.role && (
                        <p class="text-xs text-neutral-600 dark:text-neutral-400">
                          {testimonial.role}
                        </p>
                      )}
                    </div>
                  )}
                </div>
              </div>
            )}
          </div>
        </div>
      ))
    }
  </div>
</section>
