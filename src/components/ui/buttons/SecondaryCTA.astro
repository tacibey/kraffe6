---
// src/components/ui/buttons/SecondaryCTA.astro

// Prop'ları al
const { title, url } = Astro.props;

// Prop tiplerini tanımla
interface Props {
  title?: string;
  url?: string;
}

// PrimaryCTA'dan ilham alınan stil sınıfları (Yeşil Buton için)
const baseClasses =
  "group inline-flex items-center justify-center gap-x-2 rounded-lg px-4 py-3 text-sm font-bold text-neutral-50 ring-green-500 transition duration-300 focus-visible:ring-3 outline-hidden"; // text-neutral-50 (beyaz), font-bold, ring-green-500 eklendi/güncellendi
const borderClasses = "border border-transparent"; // Kenarlık şeffaf
const bgColorClasses =
  "bg-green-500 hover:bg-green-600 active:bg-green-600 dark:focus:outline-none"; // Yeşil tonları, hover/active ve dark focus
const disableClasses = "disabled:pointer-events-none disabled:opacity-50"; // Devre dışı bırakma
const fontSizeClasses = "2xl:text-base"; // Font boyutu
const ringClasses = "dark:ring-green-500"; // Dark mode focus halkası rengi güncellendi
---

<!-- PrimaryCTA stiline benzer, yeşil renkli link butonu -->
<a
  class={`${baseClasses} ${borderClasses} ${bgColorClasses} ${disableClasses} ${fontSizeClasses} ${ringClasses}`}
  href={url}
>
  {title}
  {/* Ok ikonu bu butonda genellikle olmaz, o yüzden eklenmedi */}
</a>
